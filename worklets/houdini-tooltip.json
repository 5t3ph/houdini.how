{
    "workletName": "Houdini Tooltip",
    "packageName": "houdini-tooltip",
    "cdnUrl": "https://unpkg.com/houdini-tooltip",
    "npmUrl": "https://www.npmjs.com/package/houdini-tooltip",
    "demoUrl": "https://css-houdini.rocks/tooltip",
    "tags": ["paint"],
    "customProps": {
      "--tooltip-bg": {
        "type": "color",
        "default": "#b1d8dd"
      },
      "--tooltip-position": {
        "type": "number",
        "default": "50"
      },
      "--tooltip-size": {
        "type": "number",
        "default": "15",
        "range": [0, 30]
      },
      "--border-width": {
        "type": "number",
        "default": "20",
        "range": [0, 30]
      }
    },
    "html": "<h2>Hello!</h2>",
    "usage": {
      "padding": "1rem",
      "background": "var(--tooltip-bg)",
      "border-bottom": "1px solid transparent",
      "border-image-slice": "0 0 100% 0",
      "border-image-width": "var(--border-width)",
      "border-image-outset": "var(--border-width)",
      "border-image-source": "paint(tooltip)"
    },
    "author": {
      "name": "@iamvdo",
      "url": "https://twitter.com/iamvdo",
      "image": "https://pbs.twimg.com/profile_images/430504040682631168/5DOoz-Yx_400x400.png"
    }
  }
    