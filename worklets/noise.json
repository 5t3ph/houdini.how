{
  "workletName": "noise",
  "packageName": "houdini-noise",
  "npmUrl": "https://www.npmjs.com/package/houdini-noise",
  "cdnUrl": "https://unpkg.com/houdini-noise@0.0.5/dist/worklet.js",
  "demoUrl": "https://codepen.io/jh3y/pen/LYRxQrQ",
  "tags": ["paint"],
  "customProps": {
    "--noise-cell-size" : {
      "type": "number",
      "default": "2",
      "range": [1, 20]
    },
    "--noise-hue" : {
      "type": "string",
      "default": "180 220"
    },
    "--noise-saturation" : {
      "type": "string",
      "default": "20 80"
    },
    "--noise-lightness" : {
      "type": "string",
      "default": "10 50"
    }
  },
  "html": "<button style='border-radius: 0.5rem; color: hsl(0, 0%, 100%); font-weight: bold; font-size: 2rem; padding: 1rem 2rem;'>Click Me!</button>",
  "usage": {
    "background": "paint(noise)"
  },
  "author": {
      "name": "Jhey Tompkins",
      "url": "https://twitter.com/jh3yy",
      "image": "/assets/images/jheytompkins.jpg"
  }
}
